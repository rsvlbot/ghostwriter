generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id           String   @id @default(uuid())
  name         String
  handle       String   @unique
  era          String?
  occupation   String?
  style        String   @db.Text
  sampleQuotes String[] @default([])
  systemPrompt String   @db.Text
  avatarUrl    String?
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  posts     Post[]
  schedules Schedule[]

  @@map("personas")
}

model Account {
  id             String    @id @default(uuid())
  name           String
  threadsUserId  String?   @unique
  accessToken    String?   @db.Text
  refreshToken   String?   @db.Text
  tokenExpiresAt DateTime?
  active         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  posts     Post[]
  schedules Schedule[]

  @@map("accounts")
}

model Post {
  id          String     @id @default(uuid())
  personaId   String
  accountId   String?
  content     String     @db.Text
  topic       String?
  status      PostStatus @default(DRAFT)
  scheduledAt DateTime?
  publishedAt DateTime?
  threadsId   String?
  error       String?    @db.Text
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  persona Persona  @relation(fields: [personaId], references: [id], onDelete: Cascade)
  account Account? @relation(fields: [accountId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([scheduledAt])
  @@index([personaId])
  @@map("posts")
}

enum PostStatus {
  DRAFT
  PENDING
  APPROVED
  SCHEDULED
  PUBLISHED
  REJECTED
  FAILED
}

model Schedule {
  id           String   @id @default(uuid())
  personaId    String
  accountId    String
  postsPerDay  Int      @default(3)
  postingTimes String[] @default(["09:00", "15:00", "21:00"])
  timezone     String   @default("UTC")
  autoApprove  Boolean  @default(false)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  persona Persona @relation(fields: [personaId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([personaId, accountId])
  @@map("schedules")
}

model Topic {
  id          String    @id @default(uuid())
  type        TopicType
  source      String    @db.Text
  title       String?
  description String?   @db.Text
  lastFetched DateTime?
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("topics")
}

enum TopicType {
  RSS
  TRENDING
  MANUAL
}

model Settings {
  id        String   @id @default("default")
  aiModel   String   @default("claude-sonnet-4-20250514")
  aiTemp    Float    @default(0.8)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}
